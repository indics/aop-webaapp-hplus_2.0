<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[BPM] %-d{yyyy-MM-dd HH:mm:ss} %p [%t] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>
	<appender name="APPLOGFILE" class="org.apache.log4j.RollingFileAppender">
		<param name="encoding" value="UTF-8" />
		<param name="File" value="${webapp.root}/WEB-INF/logs/bpm.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="3000KB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[BPM] %-d{yyyy-MM-dd HH:mm:ss} %-5p %-15c{1}: %m%n" />
		</layout>
	</appender>

	<logger name="org.mybatis">
		<level value="DEBUG" />
	</logger>
	
	<logger name="java.sql.Connection">
		<level value="DEBUG" />
	</logger>

	<logger name="java.sql.Statement">
		<level value="DEBUG" />
	</logger>
	<logger name="java.sql.PreparedStatement">
		<level value="DEBUG" />
	</logger>
	<logger name="java.sql.ResultSet">
		<level value="DEBUG" />
	</logger>

	<!-- Suppress success logging from InteractiveAuthenticationSuccessEvent -->
	<logger name="org.springframework.security">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache">
		<level value="DEBUG" />
	</logger>

	<logger name="java.sql">
		<level value="DEBUG" />
	</logger>

	<logger name="com.cosim.core.web.servlet.SpringMvcServlet">
		<level value="DEBUG" />
	</logger>

	<logger name="org.apache.ibatis.type.BaseTypeHandler">
		<level value="DEBUG" />
	</logger>

	<logger name="org.apache.ibatis">
		<level value="DEBUG" />
	</logger>

	<logger name="org.springframework.security">
		<level value="DEBUG" />
	</logger>

	<logger name="org.springframework.web">
		<level value="DEBUG" />
	</logger>

	<logger name="org.springframework">
		<level value="DEBUG" />
	</logger>
	<logger name="com.cosim.core.web.filter">
		<level value="DEBUG" />
	</logger>
	<logger name="org.displaytag">
		<level value="ERROR" />
	</logger>
	<logger name="com.cosim">
		<level value="DEBUG" />
	</logger>

	<logger name="org.activiti">
		<level value="DEBUG" />
	</logger>

	<logger name="org.springframework.ui.velocity">
		<level value="DEBUG" />
	</logger>

	<logger name="org.springframework.webflow ">
		<level value="INFO" />
	</logger>

	<logger name="org.apache.catalina">
		<level value="DEBUG" />
	</logger>

	<!--  
	|
	|	log4jdbc
	|
	-->
	<!-- log SQL (pre-execution) plus exceptions caused by SQL -->
	<logger name="jdbc.sqlonly" >
		<level value="DEBUG" />
	</logger>

	<!-- log SQL with timing information, post execution -->
	<logger name="jdbc.sqltiming" >
		<level value="FATAL" />
	</logger>

	<!-- only use the two logs below to trace ALL JDBC information, NOTE: This can be very voluminous! -->

	<!-- log all jdbc calls except ResultSet calls -->
	<logger name="jdbc.audit" >
		<level value="FATAL" />
	</logger>

	<!-- log the jdbc ResultSet calls -->
	<logger name="jdbc.resultset" >
		<level value="FATAL" />
	</logger>

	<!-- log connection open/close events and dump of all open connection numbers -->
	<logger name="jdbc.connection">
		<level value="INFO" />
	</logger>

	<!-- this log is for internal debugging of log4jdbc, itself -->
	<!-- debug logging for log4jdbc itself -->
	<logger name="log4jdbc.debug" >
		<level value="INFO" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="APPLOGFILE" />
	</root>

</log4j:configuration>
